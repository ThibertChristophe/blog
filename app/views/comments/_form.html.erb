<%= form_with model: [@article, @article.comments.build] do |form| %>
  <div class="mb-2">
    <%= form.text_field :commenter, class: 'form-control', placeholder: 'Pseudo' %>
  </div>
  <div class="mb-2">
    <%= form.text_area :body, class: 'form-control', placeholder: 'Que voulez-vous dire?' %>
  </div>
<%= form.submit class: 'btn btn-success' %>
<% end %>
