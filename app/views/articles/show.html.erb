<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
   <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary' %></li>
   <%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure ?"
  }, class: 'btn btn-danger' %>

<% if !@article.comments.empty? %>
<h4 class='mt-3'>Commentaires</h4>
<%= render @article.comments %>
<% end %>
<h4 class='mt-3'>Ajouter un commentaire</h4>
<%= render 'comments/form' %>
