<h1>Liste des articles</h1>
<%= link_to "Ajouter un article", new_article_path, class: "btn btn-success mb-2" %>
  <% @articles.each do |article|%>
    <div class='card mb-2'>
      <div class="card-body">
        <h3 class="card-title">
          <%= link_to article.title, article %>
        </h3>
        <p class="card-text"><%= article.body %> </p>
      </div>
    </div>
  <% end %>
